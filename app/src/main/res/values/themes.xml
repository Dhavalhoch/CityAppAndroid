<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JobSeeker" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite2</item>
        <item name="colorControlHighlight">@color/colorSelector2</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="Theme.JobSeeker" parent="Base.Theme.JobSeeker" />

    <style name="ButtonFillStyle" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:background">@drawable/selector_button_fill</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginBottom">@dimen/button_min_margin</item>
    </style>

    <style name="ButtonOutlineStyle" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_button_outline</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:layout_marginBottom">@dimen/button_min_margin</item>
    </style>

    <style name="ButtonDisableStyle" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_disable</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_marginBottom">@dimen/button_min_margin</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="colorControlNormal">@color/colorWhite1</item>
        <item name="colorControlActivated">@color/colorWhite1</item>
        <item name="colorControlHighlight">@color/colorWhite1</item>

    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:paddingVertical">@dimen/edittext_padding_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ToolBarTitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SmallTitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextStyleNormal" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SmallTitleTextStylePrimary" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SmallTitleTextStyleGray" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="OtpTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:height">@dimen/otp_box_size</item>
        <item name="android:gravity">center</item>
        <item name="android:width">@dimen/otp_box_size</item>
        <item name="android:background">@drawable/shape_otp</item>
        <item name="android:maxLength">1</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:scaleX">0.9</item>
        <item name="android:scaleY">0.9</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_white_top_rounded</item>
    </style>
</resources>